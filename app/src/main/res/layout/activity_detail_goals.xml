<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailGoalsActivity">

    <RelativeLayout
        android:id="@+id/relativeParent"
        android:background="@color/yellow_600"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:visibility="gone"
            android:id="@+id/imageDove"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_dove"
            app:tint="#ABFFFFFF" />

        <ImageView
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            app:tint="@color/material_black" />

        <TextView
            android:id="@+id/textMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:drawablePadding="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="@string/menu"
            android:textAllCaps="true"
            android:textColor="@color/material_black"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_round_menu_24"
            app:drawableTint="@color/material_black" />

        <TextView
            android:textColor="@color/material_black"
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Nikah"
            android:layout_marginTop="16dp"
            android:layout_below="@id/buttonBack"
            android:layout_centerInParent="true"/>

        <TextView
            android:textColor="@color/material_black"
            android:id="@+id/textTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="4 Tahun Dari Sekarang"
            android:layout_below="@id/textTitle"
            android:layout_centerInParent="true"/>


        <LinearLayout
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_below="@id/textTimeLeft">

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/linearAchieved"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_done"
                    app:tint="@color/material_black" />

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/material_black"
                    android:id="@+id/textAchieved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/mark_as_achieved"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageDivider"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:background="@color/material_black"/>

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginHorizontal="16dp"
                android:id="@+id/linearAboutGoals"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    app:tint="@color/material_black"/>

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/material_black"
                    android:id="@+id/textInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/about_goals"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/behavior_detail_goals" android:id="@+id/behavior"/>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>